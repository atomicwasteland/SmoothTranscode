{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Electron Main Process",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "program": "${workspaceFolder}/build/frontend/main-process/main.js",
            "localRoot": "${workspaceFolder}/src/frontend/main-process",
            "remoteRoot": "${workspaceFolder}/build/frontend/main-process",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp Run Task",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "run"
            ]
        }
    ]
}